{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./.tsbuild/",
    "sourceMap": false,
    "target": "es2019",
    "module": "commonjs",
    "removeComments": true,
    "noImplicitAny": true,
    "strictPropertyInitialization": true,
    "strictNullChecks": true,
    "types": [
      "node",
      "webdriverio/async",
      "@wdio/mocha-framework",
      "@wdio/devtools-service",
      "expect-webdriverio"
    ],
  },
  "include": [
    "./types/**/*.ts",
    "./config/**/*.ts",
    "./pageobjects/**/*.ts",
    "./specs/**/*.ts",
    "./utils/**/*.ts"
  ],
  "exclude": [
    "./node_modules"
  ]
}